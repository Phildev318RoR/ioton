<% if @department.errors.any? %>
  <h2>The following errors prevented the node_type from getting created</h2>
  <ul>
  <% @department.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@department, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <br>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:name, class: "form-control", placeholder: "name of department", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:description, class: "form-control", placeholder: "description of department", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to departments listing", departments_path, class: "btn btn-xs btn-success" %> ]
    </div>
  </div>
</div>
