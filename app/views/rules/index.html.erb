<p id="notice"><%= notice %></p>

<h1>Listing Rules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Node message parrameter</th>
      <th>Rule type</th>
      <th>Rule value</th>
      <th>Downloaded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.description %></td>
        <td><%= rule.node_message_parrameter_id %></td>
        <td><%= rule.rule_type_id %></td>
        <td><%= rule.rule_value %></td>
        <td><%= rule.downloaded %></td>
        <td><%= link_to 'Show', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

