<% if @userrole.errors.any? %>
  <h2>The following errors prevented the node_type from getting created</h2>
  <ul>
  <% @userrole.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@userrole, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <br>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :user_id %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :user_id, @users, :id, :username, :prompt => "Select a user" , class: "form-control", autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :role_id %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :role_id, @roles, :id, :name, :prompt => "Select a role" , class: "form-control", autofocus: true%>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to userroles listing", userroles_path, class: "btn btn-xs btn-success" %> ]
    </div>
  </div>
</div>