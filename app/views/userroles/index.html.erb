<div class="panel panel-default">
  <div class="panel-heading"><h3>Management Console</h3></div>
	<div class="panel-body">
		<p>
		  <%= link_to "Create new userrole", new_userrole_path, class: "btn btn-xs btn-success" %>
		</p>
		<div class="panel panel-primary">
			<!-- Default panel contents -->
			<div class="panel-heading"><h1>Listing all userroles</h1></div>
      <br>
			<table class="table">
			  <tr>

				<th>id</th>

				<th>user</th>

				<th>role</th>

			  </tr>
			  <% @userroles.each do |userrole| %>
				<tr>

				  <td><%= userrole.id %></td>

          <td><%= userrole.user.username %></td>

          <td><%= userrole.role.name %></td>

				  <td><%= link_to 'Edit', edit_userrole_path(userrole), class: "btn btn-xs btn-primary" %> </td>
				  <td><%= link_to 'Delete', userrole_path(userrole), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
				  <td><%= link_to 'Show', userrole_path(userrole), class: "btn btn-xs btn-warning"  %> </td>
				</tr>
			  <% end %>
			</table>
	</div>
</div>
