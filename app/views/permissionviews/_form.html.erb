<% if @permissionview.errors.any? %>
  <h2>The following errors prevented the node_type from getting created</h2>
  <ul>
  <% @permissionview.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@permissionview, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	    <br>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:name, class: "form-control", placeholder: "name of permissionview", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :permission %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :permission_id, @permissions, :id, :name, :prompt => "Select a permission" , class: "form-control", autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :viewmenu %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :viewmenu_id, @viewmenus, :id, :name, :prompt => "Select a viewmenu" , class: "form-control", autofocus: true%>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "Cancel request and return to permissionviews listing", permissionviews_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>
</div>
