<% if @site.errors.any? %>
  <h2>The following errors prevented the node_type from getting created</h2>
  <ul>
  <% @site.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@site, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	(

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:name, class: "form-control", placeholder: "name of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:description, class: "form-control", placeholder: "description of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :contact_person %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:contact_person, class: "form-control", placeholder: "contact_person of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :contact_phone %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:contact_phone, class: "form-control", placeholder: "contact_phone of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address1 %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:address1, class: "form-control", placeholder: "address1 of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address2 %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:address2, class: "form-control", placeholder: "address2 of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address3 %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field:address3, class: "form-control", placeholder: "address3 of Site", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to Sites listing", sites_path, class: "btn btn-xs btn-success" %> ]
    </div>
  </div>
</div>
