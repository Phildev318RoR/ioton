<div class="panel panel-default">
	<div class="panel-heading"><h3>[Client: <%= @client.name %>] - [Department: <%= @department.name %>] - [Site: <%= @site.name %>] - [IoToN Server: <%= @iotonserver.name %>]</h3></div>
	<div class="panel-body">
		<p>
		  <%= link_to "Create new node", new_node_path, class: "btn btn-xs btn-success" %>
		</p>
		<div class="panel panel-primary">
			<!-- Default panel contents -->
			<div class="panel-heading"><h1>Listing all nodes</h1></div>
			<table class="table">
			  <tr>

				<th>id</th>

				<th>node_type</th>

				<th>node_name</th>

				<th>downloaded</th>

			  </tr>
			  <% @nodes.each do |node| %>
				<tr>

				  <td><%= node.id %></td>

          <td><%= node.node_type.name %></td>

				  <td><%= node.name %></td>

				  <td><%= node.downloaded %></td>

				  <td><%= link_to 'Edit', edit_node_path(node), class: "btn btn-xs btn-primary" %> </td>
				  <td><%= link_to 'Delete', node_path(node), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
				  <td><%= link_to 'Back', node_path(node), class: "btn btn-xs btn-warning"  %> </td>
				</tr>
			  <% end %>
			</table>
	</div>
</div>
