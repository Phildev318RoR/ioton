<p id="notice"><%= notice %></p>

<h1>Listing Node Messages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Node type</th>
      <th>Node message type</th>
      <th>Downloaded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @node_messages.each do |node_message| %>
      <tr>
        <td><%= node_message.name %></td>
        <td><%= node_message.node_type_id %></td>
        <td><%= node_message.node_message_type_id %></td>
        <td><%= node_message.downloaded %></td>
        <td><%= link_to 'Show', node_message %></td>
        <td><%= link_to 'Edit', edit_node_message_path(node_message) %></td>
        <td><%= link_to 'Destroy', node_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

